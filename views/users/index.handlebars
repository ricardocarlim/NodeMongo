 <div class="container">
    <div class="row">
        <form class="form-horizontal" action="./" method="GET">
            <fieldset>
            <legend>Buscar Usuário</legend>
                <div class="form-group">
                <label class="col-md-4 control-label" for="fullname">Nome</label>  
                <div class="col-md-6">
                <input id="Name" name="Name" type="text" placeholder="seu nome" value="{{filtro.Name}}" class="form-control input-md">
                </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                <label class="col-md-4 control-label" for="cpf">Documento</label>  
                <div class="col-md-4">
                <input id="Document" name="Document" type="text" placeholder="seu CPF" value="{{filtro.Document}}" class="form-control input-md">
                </div>
                </div>           
                <!-- Text input-->
                <div class="form-group">
                <label class="col-md-4 control-label" for="birth"><i class="fa fa-birthday-cake"></i> Data de Nascimento</label>  
                <div class="col-md-2">
                <input id="Birth" name="Birth" type="date" placeholder="Data de Nascimento" value="{{filtro.Birth}}" class="form-control input-md">
                </div>
                </div>
                <div class="form-group">
                <label class="col-md-4 control-label" for="Buscar"></label>
                <div class="col-md-8">
                    <a href="/users/new/" class="" >Novo Usuário</a>
                    <input type="submit" value="Buscar" class="btn btn-success"></button>                                        
                </div>
                </div>
            </fieldset>

            {{#if users}}
                <fieldset>
                <legend>Resultado</legend>
                    <div class="container">            
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Nome</th>
                                <th>E-mail</th>
                                <th>Nascimento</th>
                                <th>Alterar</th>
                                <th>Excluir</th>
                            </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                    <tr>
                                        <td>{{Name}}</td>
                                        <td>{{Email}}</td>
                                        <td>{{Birth}}</td>
                                        <td><a href="/users/edit/{{_id}}"><i class="fa fa-pencil-square-o"></a></td>
                                        <td><a href="/users/delete/{{_id}}?filtro={{filtro.Name}}"><i class="fa fa-trash-o"></a></td>
                                    </tr>            
                                {{/each}} 
                            </tbody>
                        </table>
                    </div>
                </fieldset>
            {{/if}}            
        </form>
    </div>
 </div>